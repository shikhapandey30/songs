<!DOCTYPE html>
<html lang="en">
  <head>
  </head> 
  <body> 
    
    <div class='container-fluid login bg-dark-grey login-form'>
      <% if current_user.present? %>
        <div class="form-group text-center">
          <h2 class="mb40">My Profile</h2>
        </div> 
        <div class="login-white-box">
          <%= devise_error_messages! %>
          <% flash.each do |key, value| %>
            <% if(value != "Signed out successfully.") %>
              <div class="flash alert alert-warning <%= key %>"><%= value %></div>
            <% end%>
          <% end %>
          <strong>Username</strong>
          <div class="form-group form-control input-form-control'">
            <%= current_user.username %>
          </div>

          <strong>Email</strong>
          <div class="form-group form-control input-form-control'">
            <%= current_user.email %>
          </div>

          <strong>First Name</strong>
          <div class="form-group form-control input-form-control'">
            <%= current_user.first_name %>
          </div>

          <strong>Last Name</strong>
          <div class="form-group form-control input-form-control'">
            <%= current_user.last_name %>
          </div>

          <strong>Gender</strong>
          <div class="form-group form-control input-form-control'">
            <%= current_user.gender_display %>
          </div>

          <strong>Birthday</strong>
          <div class="form-group form-control input-form-control'">
            <%= current_user.date_of_birth %>
          </div>

          <strong>Address</strong>
          <div class="form-group form-control input-form-control'">
            <%= current_user.address %>
          </div>

          <strong>Phone Number</strong>
          <div class="form-group form-control input-form-control'">
            <%= current_user.mob %>
          </div>
          
          
        </div>
      <% end %>
      <%= link_to 'Edit my profile', edit_user_registration_path, class: "btn btn-success" %>
      <%= link_to 'Back', :back, class: "btn btn-success btn-lg" %>
    </div>
  </body>
</html>
<style type="text/css">
  .login-form {
  width: 340px;
    margin: 10px auto;
  }
  .login-form form {
    margin-bottom: 15px;
      background: #f7f7f7;
      box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
      padding: 10px;
  }
  .login-form h2 {
      margin: 0 0 15px;
  }
  .form-control, .btn {
      min-height: 38px;
      border-radius: 2px;
  }
  .btn {        
      font-size: 25px;
      font-weight: bold;
  }
</style>