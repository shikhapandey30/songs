
<p id="notice"><%= notice %></p>
<h2 align="center">Songs List</h2>
<h2 align="center">
</h2>
<div class="table-responsive">          
  <table class="table">
    <thead>
      <tr class="info">
        <th>#</th>
        <th>Song URL</th>
        <th>Plays</th>
        <th>Likes</th>
        <th>Reposts</th>
      </tr>
    </thead>
    <tbody>
      <% current_user.songs.each_with_index do |song, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= link_to song.url, song.url %></td>
          <td><%= song.song_detail.plays_count %></td>
          <td><%= song.song_detail.likes_count %></td>
          <td><%= song.song_detail.reposts_count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
